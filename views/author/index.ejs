<h2 class='text-center text-danger'>search Author</h2>
<form action="/author" method="GET">
  <label class="control-label" for="name">Name</label>
  <input class="form-control" type="text" name="name" placeholder="search author" value="<%= searchOption.name %> " />
  <button type='submit' class="btn btn-info mt-3">search</button>
</form>
<br>
<% authors.forEach(author=>{%>
  <div class='card'><%= author.name %> </div>
<%}) %> 
